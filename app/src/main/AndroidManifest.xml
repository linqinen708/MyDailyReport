<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.qyd.mydailyreport">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MyApplicaiton"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".activity.OneDayDailyReportDetailActivity">
        </activity>
        <activity android:name=".activity.RegisterActivity">
        </activity>
        <activity android:name=".activity.UploadReportActivity">
        </activity>
        <activity
            android:name=".activity.UpdateOldReportActivity"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name=".activity.PersonalDataActivity">
        </activity>
        <activity android:name=".activity.HomeActivity2">
        </activity>
    </application>

</manifest>