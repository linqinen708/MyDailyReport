<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qyd.mydailyreport.activity.LoginActivity">

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView_account"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="请输入账号"
        android:text="linqinen708"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:text="lin123456"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView_account"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView_password"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginTop="7dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView_password"/>

</android.support.constraint.ConstraintLayout>
