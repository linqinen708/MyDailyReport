<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="ReportDetailBeanBean"
            type="com.qyd.mydailyreport.bean.CurrentReportDetailBean.ReportDetailBeanBean" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="18dp"
            android:text="@{ReportDetailBeanBean.date}"
            android:textSize="@dimen/my_record_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="8dp"
            android:text="今日工作记录"
            android:textSize="@dimen/my_record_size"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_date" />

        <TextView
            android:id="@+id/tv_record_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/my_record_detail_margin_start"
            android:layout_marginTop="7dp"
            android:text="@{ReportDetailBeanBean.content}"
            android:textSize="@dimen/my_record_size"
            app:layout_constraintLeft_toLeftOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="明日计划"
            android:textSize="@dimen/my_record_size"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/tv_record_detail" />

        <TextView
            android:id="@+id/tv_tomorrow_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/my_record_detail_margin_start"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@{ReportDetailBeanBean.next_plan}"
            android:textSize="@dimen/my_record_size"
            app:layout_constraintLeft_toLeftOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="其他情况反馈或建议"
            android:textSize="@dimen/my_record_size"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/tv_tomorrow_detail" />

        <TextView
            android:id="@+id/tv_other_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/my_record_detail_margin_start"
            android:layout_marginTop="8dp"
            android:text="@{ReportDetailBeanBean.feedback_suggestion}"
            android:textSize="@dimen/my_record_size"
            app:layout_constraintLeft_toLeftOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/tv_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:text="修改"
            android:textSize="@dimen/my_record_size"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_date" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>