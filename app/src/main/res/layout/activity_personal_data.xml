<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.person.PersonalDataActivity">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="姓名："
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/personal_size"
        />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="***"
        app:layout_constraintLeft_toRightOf="@+id/tv_name"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        android:layout_marginTop="8dp"/>


    <TextView
        android:id="@+id/tv_department"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="部门："
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/personal_size"
        />

    <EditText
        android:id="@+id/et_department"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="***"
        app:layout_constraintLeft_toRightOf="@+id/tv_department"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/tv_department"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="手机："
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_department"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/personal_size"
        />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="***"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@+id/tv_phone"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/tv_phone"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        android:layout_marginEnd="8dp"
        android:onClick="onClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
