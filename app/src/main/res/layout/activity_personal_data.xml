<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.person.PersonalDataActivity">


    <com.qyd.mydailyreport.widget.MyCustomView01
        android:id="@+id/mcv_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_height"
        app:mcv01_title="姓 名："
        app:mcv01_value_editable="true"
        />
    <com.qyd.mydailyreport.widget.MyCustomView01
        android:id="@+id/mcv_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_height"
        app:mcv01_title="手机号："
        app:mcv01_value_editable="true"
        app:mcv01_value_input_type="phone"
        />
    <com.qyd.mydailyreport.widget.MyCustomView01
        android:id="@+id/mcv_department"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_height"
        app:mcv01_title="部 门："
        app:mcv01_value_editable="true"
        />
    <com.qyd.mydailyreport.widget.MyCustomView01
        android:id="@+id/mcv_position"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_height"
        app:mcv01_title="职 位："
        app:mcv01_value_editable="true"
        />



    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:onClick="onClick"
        android:text="保存"
        />
</LinearLayout>
