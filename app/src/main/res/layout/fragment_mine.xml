<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.linqinen.library.widget.CircleImageView
        android:id="@+id/civ_head_portrait"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="8dp"
        android:text="姓名"
        app:layout_constraintLeft_toRightOf="@+id/civ_head_portrait"
        app:layout_constraintTop_toTopOf="@+id/civ_head_portrait" />

    <View
        android:id="@+id/tv_line"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginTop="20dp"
        android:background="@color/grey_efeff4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/civ_head_portrait" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_line"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.qyd.mydailyreport.widget.MyCustomView03
                android:id="@+id/mcv_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_height"
                app:mcv03_title="手机号"
                tools:mcv03_value="18217088618"
                app:mcv03_value_gravity="end"
                />
            <com.qyd.mydailyreport.widget.MyCustomView03
                android:id="@+id/mcv_department"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_height"
                app:mcv03_title="部门"
                tools:mcv03_value="研发部"
                app:mcv03_value_gravity="end"
                />
            <com.qyd.mydailyreport.widget.MyCustomView03
                android:id="@+id/mcv_position"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_height"
                app:mcv03_title="职位"
                tools:mcv03_value="Android"
                app:mcv03_value_gravity="end"
                />
            <com.qyd.mydailyreport.widget.MyCustomView03
                android:id="@+id/mcv_modify"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_height"
                app:mcv03_title="修改资料"
                app:mcv03_end_icon_visible="true"
                />
            <com.qyd.mydailyreport.widget.MyCustomView03
                android:id="@+id/mcv_remind"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_height"
                app:mcv03_title="日报提醒"
                app:mcv03_end_icon_visible="true"
                />

            <Button
                android:id="@+id/btn_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:text="退出账号"
                />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>