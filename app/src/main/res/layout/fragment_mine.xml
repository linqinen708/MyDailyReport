<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.linqinen.library.widget.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/civ_head_portrait"
        android:layout_marginStart="38dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名"
        app:layout_constraintLeft_toRightOf="@+id/civ_head_portrait"
        android:layout_marginStart="38dp"
        app:layout_constraintTop_toTopOf="@+id/civ_head_portrait"
        android:layout_marginTop="8dp"/>

    <View
        android:id="@+id/tv_line"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@color/grey_efeff4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/civ_head_portrait"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_line"
        android:layout_marginStart="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/personal_size"
        />

    <View
        android:id="@+id/tv_line2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey_efeff4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所在部门"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_line2"
        android:layout_marginStart="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/personal_size"
        />

    <View
        android:id="@+id/tv_line3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey_efeff4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        />
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改密码"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_line3"
        android:layout_marginStart="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/personal_size"
        />

    <View
        android:id="@+id/tv_line4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey_efeff4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        />
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日报提醒"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_line4"
        android:layout_marginStart="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/personal_size"
        />

    <View
        android:id="@+id/tv_line5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey_efeff4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12345678912"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        android:textSize="@dimen/personal_size"
        />

    <TextView
        android:id="@+id/tv_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        android:textSize="@dimen/personal_size"/>
</android.support.constraint.ConstraintLayout>